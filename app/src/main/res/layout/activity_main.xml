<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/businesslogo"
        android:id="@+id/business"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurants"
        android:id="@+id/restaurants"
        android:layout_toRightOf="@id/business"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movies"
        android:id="@+id/movies"
        android:layout_below="@+id/business"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/weather"
        android:id="@+id/weather"
        android:layout_below="@+id/restaurants"
        android:layout_toRightOf="@id/movies"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hotels"
        android:id="@+id/hotels"
        android:layout_below="@+id/movies"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/knowledge"
        android:id="@+id/knowledge"
        android:layout_below="@+id/weather"
        android:layout_toRightOf="@+id/hotels"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />

</RelativeLayout>