<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icpracgrancentre_foreground"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/businesslogo"
        android:id="@+id/business"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurants"
        android:id="@+id/restaurants"
        android:layout_toRightOf="@id/business"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movies"
        android:id="@+id/movies"
        android:layout_toRightOf="@id/restaurants"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/restaurants"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/transport"
        android:id="@+id/transport"
        android:layout_toRightOf="@id/hotels"
        android:layout_alignTop="@+id/hotels"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hotels"
        android:id="@+id/hotels"
        android:layout_below="@+id/movies"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/knowledge"
        android:id="@+id/knowledge"
        android:layout_toRightOf="@+id/transport"
        android:layout_alignTop="@id/transport"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>